{
  "name": "@myetherwallet/mew-components",
  "version": "0.3.1-beta",
  "description": "MEW Components",
  "main": "dist/mew-components.umd.js",
  "module": "dist/mew-components.esm.js",
  "unpkg": "dist/mew-components.min.js",
  "browser": {
    "./sfc": "src/mew-components.vue"
  },
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "eslint --fix 'src/**/*.vue'",
    "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
    "build-bundle": "vue-cli-service build --target lib --name mew-components ./src/wrapper.js",
    "build:umd": "rollup --config rollup.config.js --format umd --file dist/mew-components.umd.js",
    "build:es": "rollup --config rollup.config.js --format es --file dist/mew-components.esm.js",
    "build:unpkg": "rollup --config rollup.config.js --format iife --file dist/mew-components.min.js",
    "storybook": "start-storybook -p 6006 -c .storybook watch-css -s ./src",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "deploy-storybook": "storybook-to-ghpages",
    "eslint": "eslint --ignore-path .gitignore ."
  },
  "dependencies": {
    "@vue/babel-preset-app": "^4.3.1",
    "all": "0.0.0",
    "core-js": "3.6.5",
    "eslint-config-eslint": "^6.0.0",
    "fibers": "^5.0.0",
    "git-url-parse": "^11.1.2",
    "material-design-icons-iconfont": "^5.0.1",
    "minimist": "^1.2.5",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "vue": "^2.6.10",
    "vue-cli-plugin-style-resources-loader": "^0.1.4",
    "vue-router": "^3.0.3",
    "vuetify": "^2.2.23",
    "vuex": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@mdi/font": "^5.1.45",
    "@rollup/plugin-alias": "^3.1.0",
    "@rollup/plugin-image": "^2.0.5",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-backgrounds": "^5.3.17",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addon-viewport": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/source-loader": "^5.3.17",
    "@storybook/storybook-deployer": "^2.8.5",
    "@storybook/vue": "^5.3.18",
    "@vue/cli-plugin-babel": "4.4.1",
    "@vue/cli-plugin-eslint": "4.4.1",
    "@vue/cli-service": "4.4.1",
    "@vue/eslint-config-prettier": "^5.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-preset-vue": "^2.0.2",
    "eslint": "5.16.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "file-loader": "^6.0.0",
    "prettier": "^1.18.2",
    "rollup": "^1.17.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-vue": "^5.0.1",
    "sass": "^1.26.5",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-vuetify": "^2.0.5",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.2.2"
  },
  "files": [
    "dist",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ]
}
